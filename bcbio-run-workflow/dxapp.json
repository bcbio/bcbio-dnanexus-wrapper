{
  "name": "bcbio-run-workflow",
  "title": "Create and run BCBIO Workflow",
  "summary": "Creates and runs a BCBIO Workflow on DNAnexus using a YAML template and a sample specification",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "yaml_template",
      "label": "YAML template (without input files)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "sample_spec",
      "label": "CSV Sample Specification (description of input files and batch)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "system_configuration",
      "label": "YAML System Configuration",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "output_folder",
      "default": "/dx-cwl-run",
      "label": "Output folder for workflows and data",
      "class": "string",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "outputSpec": [
  ],
  "runSpec": {
    "assetDepends": [{"id": "record-FBGv6ZQ0VPfXvj3Z71PV5gj5"}],
    "timeoutPolicy": {
      "*": {
        "hours": 72
      }
    },
    "interpreter": "bash",
    "release": "14.04",
    "distribution": "Ubuntu",
    "file": "src/bcbio-run-workflow.sh"
  },
  "access": {
    "project": "CONTRIBUTE",
    "allProjects": "VIEW",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x8"
        }
      }
    }
  }
}
